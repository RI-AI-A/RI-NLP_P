# Environment Configuration

# Database
DATABASE_URL=postgresql+asyncpg://nlp_user:nlp_password@postgres:5432/nlp_db
DATABASE_URL_SYNC=postgresql://nlp_user:nlp_password@postgres:5432/nlp_db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# NLP Models
INTENT_MODEL_NAME=distilbert-base-uncased
INTENT_MODEL_PATH=./models/intent_classifier
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
SPACY_MODEL=en_core_web_sm

# FAISS Configuration
FAISS_INDEX_PATH=./data/faiss_index
FAISS_DIMENSION=384
FAISS_TOP_K=5

# Confidence Thresholds
INTENT_CONFIDENCE_THRESHOLD=0.6
SLOT_CONFIDENCE_THRESHOLD=0.5
GUARDRAIL_CONFIDENCE_THRESHOLD=0.7

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Guardrails
ENABLE_PROFANITY_FILTER=true
ENABLE_PII_REDACTION=true
ENABLE_HALLUCINATION_FILTER=true

# LLM Configuration
USE_LLM=true
LLM_PROVIDER=ollama
LLM_MODEL=llama3.2:3b
LLM_BASE_URL=http://localhost:11434
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=500
LLM_TIMEOUT=30

# Optional: API Keys for cloud providers (if switching from Ollama)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# LLM Features
ENABLE_LLM_CACHING=true
ENABLE_HYBRID_MODE=false
LLM_FALLBACK_TO_RULES=true
